{
  "name": "patrickbyrne.net",
  "description": "Source code powering my personal website",
  "homepage": "https://patrickbyrne.net",
  "license": "See LICENSE file",
  "repository": {
    "type": "git",
    "url": "https://github.com/pbyrne/patrickbyrne.net.git"
  },
  "engines": {
    "node": "~18.2.0",
    "npm": ">=8.9.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "autoprefixer": "^10.4.12",
    "liquidjs": "^9.42.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.2.1"
  },
  "scripts": {
    "build": "npm-run-all clean build:*",
    "build:eleventy": "npx @11ty/eleventy",
    "build:postcss": "npx postcss source/stylesheets --config config/postcss.config.js --dir _site/stylesheets/",
    "clean": "rm -rf _site",
    "serve": "npm-run-all clean --parallel serve:*",
    "serve:eleventy": "npx @11ty/eleventy --serve",
    "serve:postcss": "npx postcss source/stylesheets --config config/postcss.config.js --dir _site/stylesheets/ --watch"
  }
}
